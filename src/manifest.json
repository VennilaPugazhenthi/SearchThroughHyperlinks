{
  "name": "Search Through Hyperlinks",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Search a Word in all the Hyperlinks in the current web page!",
  "icons": {
    "16": "clip16bottom.png",
    "32": "clip32bottom.png",
    "48": "clip48bottom.png",
    "128": "clip128bottom.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "clip150bottom.png",
    "default_title": "Search Through Hyperlinks",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["tabs",
    "https://*/",
    "webNavigation"
  ]
}
